<Window x:Class="TestEmguCV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestEmguCV"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Загрузить изображение" Click="LoadImage_Click"/>
            <Image x:Name="imageView" 
                   Width="600" Height="800"
                   Stretch="Uniform"/>
            <TextBlock Text="Высота пружины:"/>
            <TextBlock x:Name="heightText"/>
            <TextBlock Text="Ширина пружины:"/>
            <TextBlock x:Name="widthText"/>
            <TextBlock Text="Внутренний диаметр пружины:"/>
            <TextBlock x:Name="innerDiameterText"/>
            <TextBlock Text="Внешний диаметр пружины:"/>
            <TextBlock x:Name="outerDiameterText"/>
        </StackPanel>
    </Grid>
</Window>
